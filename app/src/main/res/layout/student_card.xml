<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CardBgStudent"
    android:layout_marginBottom="24dp"
    android:background="#ffffff"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicStudent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"

        android:layout_marginTop="4dp"

        android:src="@drawable/profile_defult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/UserNameStudent" />

    <TextView
        android:id="@+id/UserNameStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3dp"
        android:maxLines="1"

        android:text="Anukul Narkhede"
        android:layout_marginStart="16dp"
        android:textColor="#121212"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/profilePicStudent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />



    <TextView
        android:id="@+id/BoardTagStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Board Class"
        android:textSize="14sp"
        android:textColor="#999999"
        app:layout_constraintStart_toStartOf="@+id/UserNameStudent"
        app:layout_constraintTop_toBottomOf="@+id/UserNameStudent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/StatusStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#009F37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>